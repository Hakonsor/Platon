<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" prefHeight="550" prefWidth="300" stylesheets="registrering.css">
    <center>
        <GridPane alignment="CENTER" hgap="10" vgap="10" prefHeight="20" prefWidth="30">

            <padding>
                <Insets top="15" right="25" bottom="30" left="25"/>
            </padding>

            <ImageView fitHeight="128.0" fitWidth="128.0" GridPane.rowIndex="0" GridPane.halignment="CENTER">
                <Image url="@add_user.png" />
            </ImageView>

            <Text fx:id="kunde_ny" text="Ny Kunde" GridPane.halignment="CENTER"
                  GridPane.columnIndex="0" GridPane.rowIndex="1"/>


            <Line startX="0" endX="200" stroke="black" GridPane.halignment="CENTER"
                    GridPane.columnIndex="0" GridPane.rowIndex="2"/>


            <TextField fx:id="fornavn" promptText="Fornavn" prefHeight="25.0" prefWidth="160.0"
                       GridPane.columnIndex="0" GridPane.rowIndex="3"/>

            <TextField fx:id="etternavn" promptText="Etternavn" prefHeight="25.0" prefWidth="160.0"
                       GridPane.columnIndex="0" GridPane.rowIndex="4"/>

            <TextField fx:id="personnr" promptText="Personnr" prefHeight="25.0" prefWidth="160.0"
                       GridPane.columnIndex="0" GridPane.rowIndex="5"/>

            <TextField fx:id="telefon" promptText="Telefon" prefHeight="25.0" prefWidth="160.0"
                       GridPane.columnIndex="0" GridPane.rowIndex="6"/>

            <TextField fx:id="epost" promptText="E-Post" prefHeight="25.0" prefWidth="160.0"
                       GridPane.columnIndex="0" GridPane.rowIndex="7"/>

            <TextField fx:id="adresse" promptText="Adresse" prefHeight="25.0" prefWidth="160.0"
                       GridPane.columnIndex="0" GridPane.rowIndex="8"/>

            <PasswordField fx:id="passwordField_kunde" promptText="Velg Passord" prefHeight="25.0" prefWidth="160.0"
                           GridPane.columnIndex="0" GridPane.rowIndex="9"/>



            <Button fx:id="reg_kunde" text="Registrer" prefHeight="25.0" prefWidth="160.0" onAction="#kunde_reg"
                    GridPane.columnIndex="0" GridPane.rowIndex="11" GridPane.halignment="CENTER"/>


        </GridPane>
    </center>

    <stylesheets>
        <URL value="@registrering.css" />
    </stylesheets>
</BorderPane>