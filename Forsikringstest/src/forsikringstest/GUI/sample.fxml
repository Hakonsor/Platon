<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" prefHeight="640" prefWidth="800" stylesheets="login.css">

    <top>

        <TabPane>
            <tabs>
                <Tab text="Kunde" fx:id="tab1" closable="false">
                    <content>
                        <BorderPane>

                            <left>
                        <GridPane alignment="CENTER_LEFT" hgap="10" vgap="10" prefHeight="500" prefWidth="300">

                            <padding>
                                <Insets top="25" right="25" bottom="10" left="25"/>
                            </padding>

                            <Text fx:id="velkommenTekst" text="Innloging" GridPane.halignment="LEFT"
                                  GridPane.columnIndex="0" GridPane.rowIndex="0"
                                  GridPane.columnSpan="2"/>

                            <Label fx:id="1" text="Kundenr:"
                                   GridPane.columnIndex="0" GridPane.rowIndex="1"/>

                            <TextField fx:id="kundenr" promptText="kundenr" prefHeight="25.0" prefWidth="160.0"
                                       GridPane.columnIndex="0" GridPane.rowIndex="2"/>

                            <Label fx:id="3" text="Passord:"
                                   GridPane.columnIndex="0" GridPane.rowIndex="3"/>

                            <PasswordField fx:id="passwordField_kunde" promptText="passord" prefHeight="25.0" prefWidth="160.0"
                                           GridPane.columnIndex="0" GridPane.rowIndex="4"/>

                            <Label fx:id="output_kunde" text=""
                                   GridPane.columnIndex="0" GridPane.rowIndex="5"/>

                            <Button fx:id="logginn" text="Logg inn" prefHeight="25.0" prefWidth="160.0" onAction="#logginAction_kunde"
                                    GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.halignment="LEFT"/>

                            <Button fx:id="nykunde" text="Ny Kunde" prefHeight="25.0" prefWidth="160.0" onAction="#regKunde"
                                    GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.halignment="LEFT"/>


                        </GridPane>
                            </left>

                            <center >
                                <ImageView fitHeight="250.0" fitWidth="400.0">
                                        <Image url="@Forsikring.jpg" />
                                </ImageView>
                            </center>
                        </BorderPane>
                    </content>
                </Tab>


                <Tab text="Konsulent" fx:id="tab2" closable="false">
                    <content>
                        <BorderPane>

                            <left>
                                <GridPane alignment="CENTER_LEFT" hgap="10" vgap="10" prefHeight="500" prefWidth="300">

                                    <padding>
                                        <Insets top="25" right="25" bottom="10" left="25"/>
                                    </padding>

                                    <Text fx:id="velkommenTekst2" text="Innloging" GridPane.halignment="LEFT"
                                          GridPane.columnIndex="0" GridPane.rowIndex="0"
                                          GridPane.columnSpan="2"/>

                                    <Label fx:id="12" text="Brukernavn:"
                                           GridPane.columnIndex="0" GridPane.rowIndex="1"/>

                                    <TextField fx:id="brukernavn" promptText="brukernavn" prefHeight="25.0" prefWidth="160.0"
                                               GridPane.columnIndex="0" GridPane.rowIndex="2"/>

                                    <Label fx:id="32" text="Passord:"
                                           GridPane.columnIndex="0" GridPane.rowIndex="3"/>

                                    <PasswordField fx:id="passwordField_konsulent" promptText="passord" prefHeight="25.0" prefWidth="160.0"
                                                   GridPane.columnIndex="0" GridPane.rowIndex="4"/>

                                    <Label fx:id="output_konsulent" text=""
                                           GridPane.columnIndex="0" GridPane.rowIndex="5"/>

                                    <Button fx:id="logginn2" text="Logg inn" prefHeight="25.0" prefWidth="160.0" onAction="#logginAction_konsulent"
                                            GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.halignment="LEFT"/>

                                    <Button fx:id="nykonsulent" text="Ny Konsulent" prefHeight="25.0" prefWidth="160.0" onAction="#regKonsulent"
                                            GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.halignment="LEFT"/>



                                </GridPane>
                            </left>

                            <center >
                                <ImageView fitHeight="250.0" fitWidth="400.0">
                                        <Image url="@Forsikring.jpg" />
                                </ImageView>
                            </center>
                        </BorderPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>

    </top>

    <stylesheets>
        <URL value="@login.css" />
    </stylesheets>

</BorderPane>